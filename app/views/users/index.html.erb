<p id="notice"><%= notice %></p>

<h1 class="mdl-typography--display-1">Students</h1>

<%= search_form_for @q do |f| %>

<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.label "Search by name, student id, or group name", class: "mdl-textfield__label" %>
  <%= f.search_field :search_cont, class: "mdl-textfield__input" %>
    </div>
  <%= f.submit "Search", class: "mdl-button mdl-js-button"  %>
<% end %>


<table class="mdl-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Student ID</th>
      <th>Group Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.student_id %></td>
        <td><%= user.group ? user.group.name : "-" %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
