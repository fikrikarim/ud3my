<%= form_with(model: @group, local: true, :url => group_update_submission_path, :html => { :method => :patch }) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this submission from being saved:</h2>
      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :submission, class: "mdl-textfield__label" %>
    <%= f.text_area :submission, :rows => 7, class: "mdl-textfield__input", placeholder: "To create submission, paste your submission link or your submission content here" %>
  </div>


  <br>
  <br>

  <div class="actions">
    <%= f.submit "Submit", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
  </div>
<% end %>